@article{Yu2023-ss,
  title     = {Artificial intelligence-enhanced epileptic seizure detection by
               wearables},
  author    = {Yu, Shuang and El Atrache, Rima and Tang, Jianbin and Jackson,
               Michele and Makarucha, Adam and Cantley, Sarah and Sheehan,
               Theodore and Vieluf, Solveig and Zhang, Bo and Rogers, Jeffrey L
               and Mareels, Iven and Harrer, Stefan and Loddenkemper, Tobias},
  abstract  = {OBJECTIVE: Wrist- or ankle-worn devices are less intrusive than
               the widely used electroencephalographic (EEG) systems for
               monitoring epileptic seizures. Using custom-developed
               deep-learning seizure detection models, we demonstrate the
               detection of a broad range of seizure types by wearable signals.
               METHODS: Patients admitted to the epilepsy monitoring unit were
               enrolled and asked to wear wearable sensors on either wrists or
               ankles. We collected patients' electrodermal activity,
               accelerometry (ACC), and photoplethysmography, from which blood
               volume pulse (BVP) is derived. Board-certified epileptologists
               determined seizure onset, offset, and types using video and EEG
               recordings per the International League Against Epilepsy 2017
               classification. We applied three neural network models-a
               convolutional neural network (CNN) and a CNN-long short-term
               memory (LSTM)-based generalized detection model and an
               autoencoder-based personalized detection model-to the raw
               time-series sensor data to detect seizures and utilized
               performance measures, including sensitivity, false positive rate
               (the number of false alarms divided by the total number of
               nonseizure segments), number of false alarms per day, and
               detection delay. We applied a 10-fold patientwise
               cross-validation scheme to the multisignal biosensor data and
               evaluated model performance on 28 seizure types. RESULTS: We
               analyzed 166 patients (47.6\% female, median age = 10.0 years)
               and 900 seizures (13 254 h of sensor data) for 28 seizure types.
               With a CNN-LSTM-based seizure detection model, ACC, BVP, and
               their fusion performed better than chance; ACC and BVP data
               fusion reached the best detection performance of 83.9\%
               sensitivity and 35.3\% false positive rate. Nineteen of 28
               seizure types could be detected by at least one data modality
               with area under receiver operating characteristic curve > .8
               performance. SIGNIFICANCE: Results from this in-hospital study
               contribute to a paradigm shift in epilepsy care that entails
               noninvasive seizure detection, provides time-sensitive and
               accurate data on additional clinical seizure types, and proposes
               a novel combination of an out-of-the-box monitoring algorithm
               with an individualized person-oriented seizure detection
               approach.},
  journal   = {Epilepsia},
  publisher = {Wiley},
  volume    = 64,
  number    = 12,
  pages     = {3213--3226},
  month     = dec,
  year      = 2023,
  keywords  = {deep learning; epilepsy; seizure detection; seizures; wearables},
  copyright = {http://creativecommons.org/licenses/by-nc-nd/4.0/},
  language  = {en},
  annotation = {This study involved 166 pediatric patients in inpatient settings and did not perform real-time analysis. It proposed a CNN-LSTM fusion model utilizing accelerometry (ACC) and photoplethysmography (PPG), which was the best performing algorithm overall. It achieved a sensitivity of 83.9% across seizure types, improving to 95% sensitivity specifically for generalized tonic-clonic seizures (GTCS), and detected 19 out of 28 seizure types. The study highlights the promise of multimodal biosignals combined with deep learning for comprehensive seizure detection.},
  usera = {double}
}
@article{Ziobro24-neo,
  author    = {Ziobro, Julie and Pilon, Betsy and Wusthoff, Courtney J. and Benedetti, Giulia M. and Massey, Shavonne L. and Yozawitz, Elissa and Numis, Adam L. and Pressler, Ronit and Shellhaas, RenÃ©e A.},
  title     = {Neonatal Seizures: New Evidence, Classification, and Guidelines},
  journal   = {Epilepsy Currents},
  year      = {2024},
  volume    = {24},
  number    = {3},
  pages     = {e375--e389},
  abstract  = {Neonates are susceptible to seizures due to their unique physiology and combination of risks associated with gestation, delivery, and the immediate postnatal period. Advances in neonatal care have improved outcomes for some of our most fragile patients, but there are persistent challenges for epileptologists in identifying neonatal seizures, diagnosing etiologies, and providing the most appropriate care, with an ultimate goal to maximize patient outcomes. In just the last few years, there have been critical advances in the state of the science, as well as new evidence-based guidelines for diagnosis, classification, and treatment of neonatal seizures. This review provides updated knowledge about the pathophysiology of neonatal seizures, classification of the provoked seizures and neonatal epilepsies, state-of-the-art guidance on EEG monitoring in the neonatal ICU, current treatment guidelines, and potential for future advancement in treatment.}
}

@article{Chen2023-ns,
  title     = {Neonatal Seizure Detection Using a Wearable Multi-Sensor System},
  author    = {Chen, Hongyu and Wang, Zaihao and Lu, Chunmei and Shu, Feng and 
               Chen, Chen and Wang, Laishuan and Chen, Wei},
  abstract  = {Neonatal seizure is an important clinical symptom of brain 
               dysfunction, which is more common in infancy than in childhood. 
               At present, video electroencephalogram (VEEG) technology is widely 
               used in clinical practice. However, VEEG technology has several 
               disadvantages, such as interference with infant movement due to 
               connecting wires and skin irritation from gel patch or disk 
               electrodes. To address these issues, we developed a wearable 
               multi-sensor platform for newborns to collect physiological and 
               movement signals. In this study, we designed a second-generation 
               multi-sensor platform and developed an automatic detection 
               algorithm for neonatal seizures based on ECG, respiration, and 
               acceleration. Data for 38 neonates were recorded at the Childrenâ€™s 
               Hospital of Fudan University in Shanghai, totaling approximately 
               300 h of recordings. Four patients had seizures during data 
               collection (30 episodes in total). Three seizure detectors were 
               compared: one using ECG, respiration, and acceleration features; 
               one using respiration and acceleration; and one using ECG alone. 
               Results show that multimodal feature detectors achieved better 
               overall performance, reduced false alarms, and higher F-measures 
               than unimodal detectors.},
